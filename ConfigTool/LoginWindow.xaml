<Window x:Class="ConfigTool.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigTool"
        mc:Ignorable="d"
        Title="登录界面" Height="450" Width="800">
    <Grid>
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="请输入管理员密码：" Margin="0,0,0,10" FontSize="14"/>

                <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" Height="30"/>

                <Button Content="登 录" Click="BtnLogin_Click" Height="35" Width="100" IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
